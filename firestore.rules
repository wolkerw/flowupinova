rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Regra Padrão: Nega acesso a todos os documentos por padrão.
    // Esta é a prática de segurança mais importante.
    match /{document=**} {
      allow read, write: if false;
    }

    // 2. Regra de Exceção: Permite que usuários acessem seus próprios dados.
    // Esta regra se sobrepõe à anterior, mas apenas para o caminho especificado.
    match /users/{userId}/{documents=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Funções auxiliares para clareza
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
  }
}
