
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra geral: Nega acesso a tudo por padrão.
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite que um usuário autenticado leia e escreva em seus próprios dados
    // dentro da sua própria árvore de documentos.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
