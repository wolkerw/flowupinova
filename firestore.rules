rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Nega acesso a todos os documentos por padrão.
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite que usuários autenticados acessem suas próprias subcoleções.
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isSignedIn() && isOwner(userId) && isAllowedCollection(collection);
    }

    // Funções auxiliares
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAllowedCollection(collection) {
      return collection in ['posts', 'connections', 'business', 'appData', 'contacts'];
    }
  }
}
